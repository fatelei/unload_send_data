html
  head
    title= title
  body
    h1 Sync xhr request
  script.
    function collectData() {
      var xhr = new XMLHttpRequest();
      xhr.open("POST", "/collect_data_sync_xmlhttprequest", false); // third parameter indicates sync xhr
      xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
      xhr.send(JSON.stringify({'data': 'test'}));
    }
    window.addEventListener('unload', collectData, false);
